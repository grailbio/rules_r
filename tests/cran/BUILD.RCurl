load("@com_grail_rules_r//R:defs.bzl", "r_pkg", "r_library", "r_unit_test", "r_pkg_test")

package(default_visibility = ["//visibility:public"])

alias(
    name = "R_RCurl",
    actual = "RCurl",
)

genrule(
    name = "genrule_empty",
    outs = ["empty"],
    cmd = "touch $@",
)

cc_library(
  name = "curl",
  linkopts = ["-lcurl"],
)

r_pkg(
    name = "RCurl",
    srcs = glob(
        ["**"],
        exclude = [
            "BUILD.bazel",
            "inst/doc/RCurl.tex",
        ],
    ),
    tags = ["external-r-repo"],
    config_override = ":empty",
    cc_deps = [":curl"],
    deps = [
        "@R_bitops",
    ],
)

r_library(
    name = "library",
    pkgs = [":RCurl"],
    tags = ["manual"],
)
